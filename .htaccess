# Włączenie mod_rewrite
RewriteEngine On

# Cache dla różnych typów plików
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache dla obrazów - 1 miesiąc
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Cache dla CSS i JS - 1 tydzień
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    
    # Cache dla fontów - 1 miesiąc
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/ttf "access plus 1 month"
    ExpiresByType font/eot "access plus 1 month"
    
    # Cache dla HTML - 1 godzina (aktualizacje treści)
    ExpiresByType text/html "access plus 1 hour"
    
    # Cache dla manifestu - 1 tydzień
    ExpiresByType application/manifest+json "access plus 1 week"
</IfModule>

# Cache Control Headers
<IfModule mod_headers.c>
    # Cache dla statycznych zasobów
    <FilesMatch "\.(webp|png|jpg|jpeg|gif|svg|css|js|woff2|woff|ttf|eot)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # Cache dla favicon
    <FilesMatch "\.(ico)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # Cache dla HTML - krótszy czas
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Bezpieczeństwo - ukryj wersję Apache
    Header unset Server
    Header always unset X-Powered-By
</IfModule>

# Kompresja GZIP
<IfModule mod_deflate.c>
    # Kompresja dla tekstowych plików
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
</IfModule>

# Przekierowanie www na non-www (opcjonalne)
# Odkomentuj jeśli chcesz przekierowywać www.chemland.polfirms.pl na chemland.polfirms.pl
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Przekierowanie HTTP na HTTPS (opcjonalne)
# Odkomentuj jeśli chcesz wymuszać HTTPS
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Obsługa błędów
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Blokowanie dostępu do wrażliwych plików
<Files ".htaccess">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

# Dodatkowe nagłówki bezpieczeństwa
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>